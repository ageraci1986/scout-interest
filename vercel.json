{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && cd ../backend && npm install",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/src/server-vercel.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SUPABASE_URL": "https://scout-interest-optimized-a9fxapxv5-angelo-geracis-projects.vercel.app",
    "PORT": "3001"
  }
}
